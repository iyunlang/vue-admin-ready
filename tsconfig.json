{
    "compilerOptions": {
      "target": "es2016",
      "module": "esnext",
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "strictFunctionTypes": false,
      "jsx": "react",
      "strict": true,
      "allowJs": true,
      "baseUrl": ".",
      "sourceMap": true,
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "experimentalDecorators": true,
      "lib": [
        "dom",
        "esnext"
      ],
      "incremental": true,
      "skipLibCheck": true,
      "paths": {
        "/@/*": [
          "src/*"
        ]
      }
    },
    "plugins": [
      {
        "name": "@vuedx/typescript-plugin-vue"
      }
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
    ],
    "exclude": [
      "node_modules",
      "dist",
      "**/*.js"
    ]
}